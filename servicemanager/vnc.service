[Unit]
Description=VNC Server for X11
Requires=graphical.target
After=startx.target

[Service]
Type=simple
User=user
ExecStart=/usr/bin/x11vnc -auth guess -forever -overlay_nocursor -noxdamage -rfbauth /home/user/.vnc/passwd -rfbport 5900
Restart=on-failure
RestartSec=10

[Install]
WantedBy=graphical.target
