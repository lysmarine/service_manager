#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1
%:
	dh $@

override_dh_auto_install:
	install -d $$(pwd)/debian/servicemanager/usr/share/applications
	install -d $$(pwd)/debian/servicemanager/usr/bin
	install -d $$(pwd)/debian/servicemanager/etc/systemd/system/
	install -m 755 ./servicedialog $$(pwd)/debian/servicemanager/usr/bin/
	install -m 644 ./servicedialog.desktop $$(pwd)/debian/servicemanager/usr/share/applications/
	# gpsd
	install -m 0644 ./lysgpsd@.service  $$(pwd)/debian/servicemanager/etc/systemd/system/lysgpsd@.service
	# pypilot
	install -m 0644 ./pypilot@.service $$(pwd)/debian/servicemanager/etc/systemd/system/
	install -m 0644 ./pypilot_web.service $$(pwd)/debian/servicemanager/etc/systemd/system/
	install -m 0644 ./pypilot_web.socket $$(pwd)/debian/servicemanager/etc/systemd/system/
	# signalk
	install -m 0644 ./signalk.service $$(pwd)/debian/servicemanager/etc/systemd/system/
	install -m 0644 ./signalk.socket $$(pwd)/debian/servicemanager/etc/systemd/system/
	# speedSample
	install -m 644 ./speedsample.service  $$(pwd)/debian/servicemanager/etc/systemd/system/
	#startx
	install -m 644 ./startx.service $$(pwd)/debian/servicemanager/etc/systemd/system/